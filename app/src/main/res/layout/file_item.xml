<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/fileItem_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="8dp"
        app:srcCompat="@drawable/ic_folder_open_black_24dp" />

    <TextView
        android:id="@+id/fileItem_nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/fileItem_icon"
        android:layout_toRightOf="@+id/fileItem_icon"
        android:padding="8dp"
        android:text="Name" />

    <TextView
        android:id="@+id/fileItem_fileSizeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/fileItem_nameText"
        android:padding="8dp"
        android:text="File size" />


</RelativeLayout>